{% extends 'base.html.twig' %}


{% block body %}

<body>
<!-- ============================================================== -->
<!-- main wrapper -->
<!-- ============================================================== -->
<div class="dashboard-main-wrapper">


    {% block header %}
        {{ parent() }}
    {% endblock %}

    {% block leftbar %}
        {{ parent() }}
    {% endblock %}
    <!-- ============================================================== -->
    <!-- wrapper  -->
    <!-- ============================================================== -->
    <div class="dashboard-wrapper">
        <div class="container-fluid  dashboard-content">
            <!-- ============================================================== -->
            <!-- pageheader -->
            <!-- ============================================================== -->

            <!-- ============================================================== -->
            <!-- end pageheader -->
            <!-- ============================================================== -->

            <div class="row">
                <!-- ============================================================== -->
                <!-- validation form -->
                <!-- ============================================================== -->

                <!-- ============================================================== -->
                <!-- end validation form -->
                <!-- ============================================================== -->
            </div>
            <div class="row">
                <!-- ============================================================== -->
                <!-- basic form -->
                <!-- ============================================================== -->

                <!-- ============================================================== -->
                <!-- end basic form -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- horizontal form -->
                <!-- ============================================================== -->

                <!-- ============================================================== -->
                <!-- end horizontal form -->
                <!-- ============================================================== -->
            </div>
            <div class="row">
                <!-- ============================================================== -->
                <!-- valifation types -->
                <!-- ============================================================== -->
                <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5">
                    <div class="card">
                        <h5 class="card-header">Demande Congé</h5>
                        <div class="card-body">
                            <form id="validationform" data-parsley-validate="" novalidate="" method="post" action="{{ path('ajoutConge') }}">
                                <div class="form-group row">
                                    <label class="col-12 col-sm-3 col-form-label text-sm-right">Motif</label>
                                    <div class="col-12 col-sm-8 col-lg-6">
                                        <select class="form-control" id="input-select" name="motif">
                                            <option>Maladie</option>
                                            <option>Repos</option>
                                            <option>Maternité</option>
                                            <option >Familiale</option>
                                            <option >Aucune Justification</option>

                                        </select>
                                    </div>

                                </div>
                                <div class="form-group row">

                                    <label class="col-12 col-sm-3 col-form-label text-sm-right">Nom</label>
                                    <div class="col-12 col-sm-8 col-lg-6">
                                        <input required="" type="text" id="nomEmployee" name="nomEmployee" value="{{ app.user.username}}"
                                               placeholder="" class="form-control" disabled>

                                        <input required="" type="text" id="idEmployee" name="idEmployee" value="{{ app.user.id}}"
                                               placeholder="" class="form-control" hidden disabled>

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-12 col-sm-3 col-form-label text-sm-right">Début</label>
                                    <div class="col-12 col-sm-8 col-lg-6">
                                    <input type="date" name="dateDebut" id="dateDebut">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-12 col-sm-3 col-form-label text-sm-right">Fin </label>
                                    <div class="col-12 col-sm-8 col-lg-6">
                                    <input type="date" name="dateFin" id="dateFin">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-12 col-sm-3 col-form-label text-sm-right">Nbre de Jours</label>
                                    <div class="col-12 col-sm-8 col-lg-6">
                                        <input required="" type="number" id="nbJours" name="nbJours"
                                               min="1" max="21" placeholder="" class="form-control">
                                    </div>
                                </div>

                        <div class="form-group row text-right">
                            <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                                <input type="submit" class="btn btn-space btn-primary" value="Ajouter"></input>
                                <input type="reset" class="btn btn-space btn-secondary" value="Annuler"></input>
                            </div>
                        </div>
                        </form>

                    </div>
                </div>
            </div>

                <div class="col-xl-7 col-lg-7 col-md-7 col-sm-7 col-7">
                    <div class="card">
                        <h5 class="card-header">Solde Congé</h5>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered first">
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Totale congé</th>
                                        <th>Nombre de jours de congé</th>
                                        <th>Reste de congé</th>


                                    </tr>
                                    </thead>
                                    {% for entity in solde %}
                                        <tbody>
                                        <tr>
                                            <td>{{ entity.prenom }} {{ entity.nom }}</td>
                                            <td>{{ 21  }} Jours</td>
                                            <td> {{ entity.nbConge }} Jours</td>
                                            <td>{{ 21- entity.nbConge }} Jours</td>
                                        </tr>


                                        </tbody>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <h5 class="card-header">Liste Congé</h5>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered first">
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Nombre de jours</th>
                                        <th>Etat</th>
                                        <th>Début</th>
                                        <th>Fin</th>
                                        <th>Action</th>



                                    </tr>
                                    </thead>
                                    {% for entity in list %}
                                        <tbody>
                                        <tr>
                                            <td>{{ entity.prenom }} </td>
                                            <td> {{ entity.nbConge }} Jours</td>
                                            <td>{{ entity.etat }} </td>

                                            <td>{{ entity.dateDebut | date('d/m/Y ') }} </td>
                                            <td>{{ entity.dateFin | date('d/m/Y ')}} </td>
                                            <td><a href="{{ path('modifConge',{id: entity.id}) }}"> Modifier</a><br>
                                                <a onclick="return confirm('Etes-vous sûr de supprimer ce congé?')" href="{{ path('suppConge',{id:entity.id}) }}"> Supprimer</a></td>

                                        </tr>


                                        </tbody>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- ============================================================== -->
            <!-- end valifation types -->
            <!-- ============================================================== -->
        </div>

    </div>
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
        {% block footer %}
            {{ parent() }}
        {% endblock %}
    <!-- ============================================================== -->
    <!-- end footer -->
    <!-- ============================================================== -->
</div>
</div>
<!-- ============================================================== -->
<!-- end main wrapper -->
<!-- ============================================================== -->
<!-- Optional JavaScript -->
<script src="{{ asset('Design/assets/vendor/jquery/jquery-3.3.1.min.js') }}"></script>
<script src="{{ asset('Design/assets/vendor/bootstrap/js/bootstrap.bundle.js') }}"></script>
<script src="{{ asset('Design/assets/vendor/slimscroll/jquery.slimscroll.js') }}"></script>
